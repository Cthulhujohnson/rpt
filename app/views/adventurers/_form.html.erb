<%= form_for(@adventurer) do |f| %>
  <% if @adventurer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@adventurer.errors.count, "error") %> prohibited this adventurer from being saved:</h2>

      <ul>
      <% @adventurer.errors.full_messages.each do |message| %>
