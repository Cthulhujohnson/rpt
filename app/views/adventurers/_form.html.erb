  </div>
  <div class="field">
    <%= f.label :con %><br>
    <%= f.number_field :con %>
  </div>
  <div class="field">
    <%= f.label :int %><br>
    <%= f.number_field :int %>
  </div>
  <div class="field">
    <%= f.label :wis %><br>
    <%= f.number_field :wis %>
  </div>
  <div class="field">
    <%= f.label :cha %><br>
    <%= f.number_field :cha %>
  </div>
