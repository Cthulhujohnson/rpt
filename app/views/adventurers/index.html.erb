<p id="notice"><%= notice %></p>

<h1>Listing Adventurers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Str</th>
      <th>Dex</th>
      <th>Con</th>
      <th>Int</th>
      <th>Wis</th>
      <th>Cha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventurers.each do |adventurer| %>
      <tr>
        <td><%= adventurer.name %></td>
        <td><%= adventurer.str %></td>
        <td><%= adventurer.dex %></td>
        <td><%= adventurer.con %></td>
        <td><%= adventurer.int %></td>
        <td><%= adventurer.wis %></td>
        <td><%= adventurer.cha %></td>
        <td><%= link_to 'Show', adventurer %></td>
        <td><%= link_to 'Edit', edit_adventurer_path(adventurer) %></td>
        <td><%= link_to 'Destroy', adventurer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

